<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="8dp"
            >

            <androidx.cardview.widget.CardView
                android:id="@+id/card1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="4dp"
                >
                <ImageView
                    android:id="@+id/saved_item_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/pink_chair"/>

            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/saved_item_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name of Product"
                android:layout_toRightOf="@id/card1"
                android:textSize="22dp"
                android:fontFamily="@font/poppins_medium"
                android:textColor="@color/black"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="6dp"/>

            <TextView
                android:id="@+id/saved_item_Price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rs. 5000"
                android:fontFamily="@font/poppins_medium"
                android:layout_toRightOf="@id/card1"
                android:layout_below="@id/saved_item_name"
                android:textSize="22dp"
                android:textColor="@color/black"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="6dp"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/light_grey"
                android:layout_below="@id/card1"
                android:layout_marginTop="10dp"/>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</androidx.appcompat.widget.LinearLayoutCompat>